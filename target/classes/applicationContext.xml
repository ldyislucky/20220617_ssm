<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd">
    <!--1、配置bean-->
    <bean id="bookdao" class="com.ldy.dao.imp.BookDaoImp"/>
    <bean id="bookservice" class="com.ldy.service.imp.BookServiceImp">
        <!--配置bookdao和bookservice的关系，将bookdao放入到bookservice中
        bd是指BookServiceImp中的BookDao  bd属性,如此一来，BookServiceImp中也必须是自动生成的setBd(生成方法不能改变)
        bookdao是指本配置文件中id为bookdao的bean
        -->
        <property name="bd" ref="bookdao"></property>
    </bean>


</beans>